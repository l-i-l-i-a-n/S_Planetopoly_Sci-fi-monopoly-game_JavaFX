<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
          prefWidth="600.0"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="view.controllers.HomeMenuController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Label styleClass="title, title-xl" text="PLANETOPOLY" wrapText="true" GridPane.columnSpan="2"
           GridPane.halignment="CENTER"
           GridPane.valignment="CENTER">
    </Label>
    <Button fx:id="newGamebutton" onAction="#newGameHandler" mnemonicParsing="false" text="New game"
            GridPane.halignment="CENTER" GridPane.rowIndex="1"
            GridPane.rowSpan="2" GridPane.valignment="CENTER"/>
    <Button fx:id="resumeSavedGameButton" onAction="#resumeSavedGameHandler" mnemonicParsing="false"
            text="Resume saved game"
            GridPane.columnIndex="1" GridPane.halignment="CENTER"
            GridPane.rowIndex="1" GridPane.rowSpan="2" GridPane.valignment="CENTER"/>
</GridPane>
