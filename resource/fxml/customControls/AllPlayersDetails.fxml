<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
         spacing="5.0" styleClass="playerDetails" type="VBox" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml">
    <Label styleClass="title" text="Players data"/>
    <TableView fx:id="playersTableView" prefHeight="120.0" VBox.vgrow="NEVER">
        <columns>
            <TableColumn fx:id="colorTableColumn" text="Color"/>
            <TableColumn fx:id="nameTableColumn" sortType="DESCENDING" text="Name"/>
            <TableColumn fx:id="balanceTableColumn" text="Balance"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</fx:root>
